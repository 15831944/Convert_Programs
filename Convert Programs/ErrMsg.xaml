<Window x:Class="Convert_Programs.ErrMsg"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ErrMsg" Height="323" Width="570">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <TextBox x:Name="tbMsg" Margin="10,10,10,0" TextWrapping="Wrap" Text="TextBox" HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto" Height="250" VerticalAlignment="Top"/>
        <Button x:Name="btnSend" Content="Send" Margin="10,0,0,6" HorizontalAlignment="Left" Width="120" Height="22" VerticalAlignment="Bottom"/>
        <Button x:Name="btnClose" Content="Close" Margin="162,0,10,6" Height="22" VerticalAlignment="Bottom"/>

    </Grid>
</Window>
